    async def clear(self, ctx: commands.Context , amount = 0):
       amounttmp = amount
       if amounttmp < 1001:
                while amount >= 50:
                    print(amount)
                    await ctx.channel.purge(limit=amount)
                    amount = amount - 50
                    await asyncio.sleep(1)
                else:
                    await ctx.channel.purge(limit=amount)
                    await ctx.send(content=f"{ctx.author.mention} clear!" , delete_after=5)
                    print('clear!')
        else:
               await ctx.send(content=f"{ctx.author.mention} max 1000" , delete_after=5); 
                    
            
